<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="gstatic" type="host">https://www.gstatic.com</value>
                <value id="data" type="host">'self' data:</value>
            </values>
            <values>
                <value id="highcharts" type="host">https://code.highcharts.com</value>
                <value id="data" type="host">'self' data:</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="firebase" type="host">https://fcm.googleapis.com</value>
                <value id="data" type="host">'self' data:</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="gstatic" type="host">https://www.gstatic.com</value>
                <value id="data" type="host">'self' data:</value>
            </values>
            <values>
                <value id="googleapis" type="host">https://fonts.googleapis.com</value>
                <value id="data" type="host">'self' data:</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="googleapis" type="host">https://fonts.gstatic.com</value>
                <value id="data" type="host">'self' data:</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
